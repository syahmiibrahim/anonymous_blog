<% unless @err_msg.empty? %>
  <div class="alert alert-danger" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= @err_msg %>
  </div>
<% end %>

<form class="form-horizontal" action="/post/create" method="POST">
  <div class="form-group">
    <label for="input_post_title" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="input_post_title" name="input_post_title" placeholder="Title">
    </div>
  </div>
  <div class="form-group">
    <label for="input_post_body" class="col-sm-2 control-label">Body</label>
    <div class="col-sm-10">
      <textarea class="form-control" id="input_post_body" name="input_post_body" placeholder="Body" rows="10"></textarea>
    </div>
  </div>
  <div class="form-group">
    <label for="input_post_tags" class="col-sm-2 control-label">Tags</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="input_post_tags" name="input_post_tags" placeholder="eg: random, text, here">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <a href="/" class="btn btn-default">Cancel</a>
      <button type="submit" class="btn btn-default">Post</button>
    </div>
  </div>
</form>