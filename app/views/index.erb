
<% @posts.each do |post| %>
  <p><%= post.created_at %></p>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><a href="/post/<%= post.id %>"><%= post.post_title %></a></h3>
    </div>
    <div class="panel-body">
      <p><%=  post.post_body %></p>
    </div>
    <div class="panel-footer">
      <p>Last updated: <%= post.updated_at %></p>
      <% unless post.tags.count == 0 %>
        <p>
          Tags: <% post.tags.each do |t| %>
          <a href="/tag/<%= t.tag %>"><span class="badge"><%= t.tag %></span></a>
          <% end %>
        </p>
      <% end %>
    </div>
  </div>
<% end %>