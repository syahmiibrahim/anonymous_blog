<!-- # show all posts with tags -->

<% @tag.posts.order(created_at: :desc).each do |t| %>
  <p><%= t.created_at %></p>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><a href="/post/<%= t.id %>"><%= t.post_title %></a></h3>
    </div>
    <div class="panel-body">
      <p><%= t.post_body %></p>
    </div>
    <div class="panel-footer">
      <p>Last updated: <%= t.updated_at %></p>
      <% unless t.tags.count == 0 %>
        <p>
          Tags: <% t.tags.each do |tt| %>
          <a href="/tag/<%= tt.tag %>"><span class="badge"><%= tt.tag %></span></a>
          <% end %>
        </p>
      <% end %>
    </div>
  </div>
<% end %>